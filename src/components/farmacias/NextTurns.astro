---
const nextTurns = [
  {
    day: "Mié",
    date: "25",
    name: "Farmacia Nueva Era",
    address: "Ruta 197 km 12.5, El Talar",
  },
  {
    day: "Jue",
    date: "26",
    name: "Farmacia Pasteur",
    address: "Brasil 450, El Talar",
  },
  {
    day: "Vie",
    date: "27",
    name: "Farmacia Social Talar",
    address: "Las Dalias 1200, El Talar",
  },
];
---

<section class="mb-16">
  <div class="mb-6 flex items-center justify-between">
    <h2 class="text-2xl font-bold">Próximos Turnos</h2>
    <!-- <a href="#" class="text-sm font-semibold text-green-600">
      Ver calendario completo →
    </a> -->
  </div>

  <div class="grid gap-6 md:grid-cols-3">
    {
      nextTurns.map((turn) => (
        <div class="rounded-2xl bg-white p-6 shadow-sm">
          <div class="mb-4 flex items-center gap-3">
            <div class="rounded-lg bg-gray-100 px-3 py-2 text-center">
              <div class="text-xs font-semibold text-gray-500">{turn.day}</div>
              <div class="text-lg font-bold">{turn.date}</div>
            </div>
          </div>

          <h3 class="font-bold">{turn.name}</h3>
          <p class="mt-1 text-sm text-gray-600">{turn.address}</p>

          <button class="mt-4 w-full rounded-full bg-green-100 py-2 text-sm font-semibold text-green-700">
            Llamar
          </button>
        </div>
      ))
    }
  </div>
</section>
